{>frame}
<div class="modal xfade" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button bmmType="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">{{title}}</h4>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">
                <div class="hidden alert alert-danger"></div>
                <button bmmType="button" class="btn btn-default" data-dismiss="modal">Close</button>
                {{#each buttons}}
                    <button bmmType="button" name="{{name}}" class="{{class}}">{{label}}</button>
                {{/each}}
            </div>
        </div>
    </div>
</div>


{>singleTextInput}
<div class="row properties-line no-border">
    <div class="properties-label"><label for="{{input_id}}">{{label}}</label></div>
    <div class="properties-value"><input id="{{input_id}}" class="form-control" value="{{value}}"></div>
</div>

{>singleSelectInput}
<div class="row properties-line no-border">
    <div class="properties-label"><label for="{{id}}_select">{{label}}</label></div>
    <div class="properties-value"><select id="{{id}}_select" class="form-control"></select></div>
</div>

{>alert}
<div class="modal xfade" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content" role="alert">
            <div class="modal-header modal-alert-{{bmmType}}">
                <button bmmType="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">{{title}}&nbsp;</h4>
            </div>
            {{#if text}}
                <div class="modal-body">{{text}}</div>
            {{/if}}
            <div class="modal-footer">
                <div class="hidden alert alert-danger"></div>
                <button bmmType="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


