{>load}
<div class="row properties-line no-border">
    <div class="properties-label"><label for="{{panel_id}}_archetype">Archetype Id</label></div>
    <div class="properties-value">
      <select id="{{panel_id}}_archetype" class="form-control" id="selectArchetypeId" data-live-search="true">
        {{#each archetypes}}
        <option value="{{archetypeId}}">{{archetypeId}}</option>
        {{/each}}
      </select>
    </div>
</div>

{>specialize}
<div class="row properties-line no-border">
    <div class="properties-label"><label for="{{panel_id}}_parent">Parent Archetype Id</label></div>
    <div class="properties-value">
      <select id="{{panel_id}}_parent" class="form-control" id="selectArchetypeId">
        {{#each archetypes}}
            <option value="{{archetypeId}}">{{archetypeId}}</option>
        {{/each}}
      </select>
    </div>
</div>
<div class="row properties-line no-border">
    <div class="properties-label"><label for="{{panel_id}}_specialized">Specialized Archetype Id</label></div>
    <div class="properties-value"><input id="{{panel_id}}_specialized" bmmType="text" class="form-control input-sm"></div>
</div>

{>create}
<div class="row properties-line no-border">
    <div class="properties-label"><label for="{{panel_id}}_version" class="control-label">Archetype Id</label></div>
    <div class="properties-value"><p id="{{panel_id}}_archetype_id" class="form-control-static"></p></div>
</div>
<div class="row properties-line no-border">
    <div class="properties-label"><label for="{{panel_id}}_rm_type" class="control-label">Rm Type</label></div>
    <div class="properties-value"><select id="{{panel_id}}_rm_type" class="form-control input-sm"></select></div>
</div>
<div class="row properties-line no-border">
    <div class="properties-label"><label for="{{panel_id}}_concept" class="control-label">Concept</label></div>
    <div class="properties-value"><input id="{{panel_id}}_concept" class="form-control input-sm" value=""></div>
</div>
<div class="row properties-line no-border">
    <div class="properties-label"><label for="{{panel_id}}_version" class="control-label">Version</label></div>
    <div class="properties-value"><input id="{{panel_id}}_version" class="form-control input-sm" value="1.0.0"></div>
</div>
<div class="row properties-line no-border">
    <div class="properties-label"><label for="{{panel_id}}_language" class="control-label">Original Language</label></div>
    <div class="properties-value"><input id="{{panel_id}}_language" class="form-control input-sm" value="en"></div>
</div>



